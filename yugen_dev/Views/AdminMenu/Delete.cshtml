@model yugen_dev.Models.Menu

@{
    ViewData["Title"] = "Delete";
}

<h1>Supprimer le menu</h1>

<h3>Êtes-vous sûr de vouloir supprimer ce menu ?</h3>
<div>
    <h4>Menu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameFr)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameFr)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameJap)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameJap)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste des menus</a>
    </form>
</div>
