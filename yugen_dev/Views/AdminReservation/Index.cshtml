@model IEnumerable<yugen_dev.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des réservations</h1>

<p>
    <a asp-action="Create">Créer une nouvelle réservation</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumberPeople)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateReservation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeReservation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            @* Beware, display is missing *@
            <th>
                @Html.DisplayNameFor(model => model.Client.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client.FirstName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumberPeople)
            </td>
            <td>
                @item.DateReservation.ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeReservation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            @if (item.Client != null)
                {
                <td>
                    @Html.DisplayFor(modelItem => item.Client.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.FirstName)
                </td>
                }
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Éditer</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
