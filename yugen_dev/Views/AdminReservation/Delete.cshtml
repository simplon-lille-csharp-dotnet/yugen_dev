@model yugen_dev.Models.Reservation

@{
    ViewData["Title"] = "Delete";
}

<h1>Supprimer</h1>

<h3>Êtes-vous sûr de supprimer cette réservation?</h3>
<div>
    <h4>Réservation</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumberPeople)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberPeople)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateReservation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateReservation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TimeReservation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeReservation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste des réservations</a>
    </form>
</div>
