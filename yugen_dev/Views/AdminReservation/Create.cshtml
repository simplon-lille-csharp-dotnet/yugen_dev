@model yugen_dev.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Créer une nouvelle réseervation</h1>

<h4>Réservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumberPeople" class="control-label"></label>
                <input asp-for="NumberPeople" class="form-control" />
                <span asp-validation-for="NumberPeople" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateReservation" class="control-label"></label>
                <input asp-for="DateReservation" class="form-control" />
                <span asp-validation-for="DateReservation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeReservation" class="control-label"></label>
                <input asp-for="TimeReservation" class="form-control" />
                <span asp-validation-for="TimeReservation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* beware! non functionnal on the foreign key client id *@
                @* <label asp-for="Client.Id" class="control-label"></label>
                <input asp-for="Client.Id" class="form-control" />
                <span asp-validation-for="Client.Id" class="text-danger"></span> *@

                @* <label asp-for="Client.Id" class="control-label"></label>
                <select asp-for="Client.Id" asp-items="@(new SelectList(Model.Client, "Id", "Name"))" class="form-control"></select>
                <span asp-validation-for="Client.Id"  class="text-danger"></span> *@

                <label asp-for="Client.Id" class="control-label">Nom</label>
                <select asp-for="Client.Id" asp-items="ViewBag.Clients" class="form-control" name="ClientID"></select>
                <span asp-validation-for="Client.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste des réservations</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
